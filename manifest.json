{
    "name": "YTCaption for YouTube",
    "version": "1.0",
    "description": "Customize YouTube captions with CSS",
    "manifest_version": 2,
    "options_ui": {
      "page": "options.html"
    },  
    "permissions": [ "storage" ],
    "background": {
      "scripts": ["background.js"]
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png",
      "512": "icon512.png"
    },
    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/*"],
        "js": ["script.js"],
        "all_frames": true,
        "run_at": "document_end"
      }
    ]
}
